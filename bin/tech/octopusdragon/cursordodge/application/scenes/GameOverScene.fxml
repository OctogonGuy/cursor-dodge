<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="300.0" prefWidth="400.0" stylesheets="@../../../../../resources/styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tech.octopusdragon.cursordodge.application.scenes.GameOverSceneController">
   <top>
      <Label styleClass="title" maxHeight="1.7976931348623157E308" text="Game Over" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox styleClass="button-bar" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToGameScene" text="Play Again" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#switchToTitleScene" text="Main Menu" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Label fx:id="messageLabel" maxHeight="1.7976931348623157E308" text="Would you like to play again?" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
